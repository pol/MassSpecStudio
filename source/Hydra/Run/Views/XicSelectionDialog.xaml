<Window x:Class="Hydra.Modules.Run.Views.XicSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		WindowStartupLocation="CenterScreen"
        Title="XIC Selection" Height="150" Width="300">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition></RowDefinition>
			<RowDefinition></RowDefinition>
			<RowDefinition></RowDefinition>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition></ColumnDefinition>
			<ColumnDefinition></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<TextBlock Text="Mass:" VerticalAlignment="Center"></TextBlock>
		<TextBox Text="{Binding Mass}" Grid.Column="1" VerticalAlignment="Center"></TextBox>
		<TextBlock Text="MZ Tolerance:" VerticalAlignment="Center" Grid.Row="1"></TextBlock>
		<TextBox Text="{Binding MzTolerance}" Grid.Column="1" VerticalAlignment="Center" Grid.Row="1"></TextBox>

		<Button Content="Retrieve" Grid.Row="2" VerticalAlignment="Center" Width="80" Click="OnRetrieve"></Button>
		<Button Content="Cancel" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Width="80" Click="OnCancel"></Button>
	</Grid>
</Window>
