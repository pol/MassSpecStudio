<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<LinearGradientBrush x:Key="MenuBarBackground" EndPoint="0.5,1.0" StartPoint="0.5,0">
		<GradientStop Color="#FFc8d1e0" Offset="0" />
		<GradientStop Color="#FFaeb9cd" Offset="1" />
	</LinearGradientBrush>
	<SolidColorBrush x:Key="MenuBarForeground">#FF000000</SolidColorBrush>
	<LinearGradientBrush x:Key="ToolBarPanelBackground" EndPoint="0.5,1.0" StartPoint="0.5,0">
		<GradientStop Color="#FF9caab2" Offset="0" />
		<GradientStop Color="#FFa5b2c9" Offset="1" />
	</LinearGradientBrush>
	<SolidColorBrush x:Key="ToolBarBackground">#FFbcc7d8</SolidColorBrush>
	<SolidColorBrush x:Key="StatusBarBackground">#FF293955</SolidColorBrush>
	<SolidColorBrush x:Key="StatusBarForeground">#FFFFFFFF</SolidColorBrush>
	<SolidColorBrush x:Key="DialogDarkBackground" Color="{DynamicResource DarkColor}"></SolidColorBrush>
	<SolidColorBrush x:Key="DialogLightBackground" Color="{DynamicResource LightColor}"></SolidColorBrush>

	<Color x:Key="LightColor">#FFbcc7d8</Color>
	<Color x:Key="DarkColor">#FF293955</Color>
</ResourceDictionary>